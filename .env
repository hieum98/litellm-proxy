# ================================================
# LITELLM PROXY CONFIGURATION
# ================================================

# Master Keys
LITELLM_MASTER_KEY=sk-your-very-secure-master-key-here
LITELLM_SALT_KEY=sk-your-very-secure-salt-key-here

# Admin UI Credentials
UI_USERNAME=admin
UI_PASSWORD=your-secure-admin-password-123

# Proxy Base URL (for SSO callbacks)
PROXY_BASE_URL=http://localhost

# ================================================
# DATABASE CONFIGURATION
# ================================================
POSTGRES_PASSWORD=litellm_secure_password_change_me
DATABASE_URL=postgresql://litellm:litellm_secure_password_change_me@postgres:5432/litellm

# ================================================
# REDIS CONFIGURATION
# ================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_change_me

# ================================================
# LLM PROVIDER API KEYS
# ================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_KEY_BACKUP=sk-your-backup-openai-key-here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# ================================================
# OBSERVABILITY & MONITORING
# ================================================

# Langfuse (LLM Observability)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com

# Prometheus (optional)
PROMETHEUS_ENABLED=true

# ================================================
# ALERTING (Optional)
# ================================================

# Slack Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL


# ================================================
# SSO CONFIGURATION (Optional)
# ================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft Azure AD
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT=your-tenant-id

# ================================================
# GRAFANA (Optional)
# ================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_admin_password_123

# ================================================
# ADVANCED SETTINGS
# ================================================

# Logging
LITELLM_LOG=INFO
SET_VERBOSE=True

# High Availability
STORE_MODEL_IN_DB=True
EXPERIMENTAL_MULTI_INSTANCE_RATE_LIMITING=True

# Key Rotation
LITELLM_KEY_ROTATION_ENABLED=True
LITELLM_KEY_ROTATION_CHECK_INTERVAL_SECONDS=86400

# Health Checks
SEPARATE_HEALTH_APP=1
SEPARATE_HEALTH_PORT=8001

# Security (Optional)
# ALLOWED_EMAIL_DOMAINS=your-company.com
# PROXY_ADMIN_ID=your-sso-user-id-here
